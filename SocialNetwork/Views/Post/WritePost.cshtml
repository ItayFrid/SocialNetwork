@model SocialNetwork.Models.Post

@{
    /**/

    ViewBag.Title = "WritePost";
}

<script src="~/Scripts/jquery-3.3.1.js"></script>
<script src="~/Scripts/jquery.validate.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.js"></script>

<h2>Write Post</h2>
<hr />

@using (Html.BeginForm("AddPost", "Post", FormMethod.Post))
{
    <div class="form-group row">
        <label for="inputTitle" class="col-sm-2 col-form-label">Title</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.title, new { @class = "form-control", id = "inputTitle", type = "text" })
            <small class="text-danger">@Html.ValidationMessageFor(x => x.title)</small>
        </div>
    </div>
    
    <div class="form-group row">
        <label for="inputBody" class="col-sm-2 col-form-label">Post Body</label>
        <div class="col-sm-10">
            @Html.TextAreaFor(m => m.body, new { @class = "form-control", id = "inputBody" })
            <small class="text-danger">@Html.ValidationMessageFor(x => x.body)</small>
        </div>
    </div>

    <input class="btn btn-outline-primary" id="submit" type="submit" value="Post" />
}