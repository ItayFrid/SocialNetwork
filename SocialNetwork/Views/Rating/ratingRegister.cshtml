    <div class="form-group row">
        <label for="inputCourseId" class="col-sm-2 col-form-label">CourseID</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.courseId, new { @class = "form-control", id = "inputCourseId" })
            <small class="text-danger">@Html.ValidationMessageFor(x => x.courseId)</small>
        </div>
    </div>

    <div class="form-group row">
        <label for="inputStudentEmail" class="col-sm-2 col-form-label">StudentEmail</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.studentEmail, new { @class = "form-control", id = "inputStudentEmail", type = "email" })
            <small class="text-danger">@Html.ValidationMessageFor(x => x.studentEmail)</small>
        </div>
    </div>

    <div class="form-group row">
        <label for="inputRating" class="col-sm-2 col-form-label">Rating</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.rat, new { @class = "form-control", id = "inputRating" })
            <small class="text-danger">@Html.ValidationMessageFor(x => x.rat)</small>
        </div>
    </div>

    <div class="form-group row">
        <label for="inputComment" class="col-sm-2 col-form-label">Comment</label>
        <div class="col-sm-10">
            @Html.TextAreaFor(m => m.comment, new { @class = "form-control", id = "inputComment" })
            <small class="text-danger">@Html.ValidationMessageFor(x => x.comment)</small>
        </div>
    </div>

    <input class="btn btn-outline-primary" id="submit" type="submit" value="Add User" />
    <h4 class="text-danger">@ViewBag.message</h4>
}
