@model SocialNetwork.ViewModels.ViewModel

@{
    ViewBag.Title = "Add Rating";
}
<script src="~/Scripts/jquery-3.3.1.js"></script>
<script src="~/Scripts/jquery.validate.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
<h2>Add Rating</h2>
<hr />
@using (Html.BeginForm("addRating", "Rating", FormMethod.Post))
{
    <div class="form-group row">
        <label for="inputCourseId" class="col-sm-2 col-form-label">CourseID</label>
        <div class="col-sm-10">
            <input id="inputCourseId" name="inputCourseId" class="form-control" type="text" value="@Model.course.id" readonly>
        </div>
    </div>

    <div class="form-group row">
        <label for="inputStudentEmail" class="col-sm-2 col-form-label">StudentEmail</label>
        <div class="col-sm-10">
            <input id="inputStudentEmail" class="form-control" type="text" placeholder="@User.Identity.Name" readonly>
        </div>
    </div>

    <div class="form-group row">
        <label for="inputRating" class="col-sm-2 col-form-label">Rating</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.rating.rat, new { @class = "form-control", id = "inputRating" })
            <small class="text-danger">@Html.ValidationMessageFor(x => x.rating.rat)</small>
        </div>
    </div>

    <div class="form-group row">
        <label for="inputComment" class="col-sm-2 col-form-label">Comment</label>
        <div class="col-sm-10">
            @Html.TextAreaFor(m => m.rating.comment, new { @class = "form-control", id = "inputComment" })
            <small class="text-danger">@Html.ValidationMessageFor(x => x.rating.comment)</small>
        </div>
    </div>

    <input class="btn btn-outline-primary" id="submit" type="submit" value="Add Rating" />
    <h4 class="text-danger">@ViewBag.message</h4>
}
