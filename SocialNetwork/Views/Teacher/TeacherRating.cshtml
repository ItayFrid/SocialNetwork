@model SocialNetwork.ViewModels.ViewModel

@{
    ViewBag.Title = "TeacherRating";
}

<h2>Teacher Rating</h2>
<hr />

<form action="UpdateTeacherRating" method="post">
    <div class="form-group row">
        <label for="inputTo" class="col-sm-2 col-form-label">Teacher</label>
        <div class="col-sm-10">
            @Html.DropDownListFor(m => m.teacher, new SelectList(Model.teachers, "email", "name"), new { @class = "form-control", id = "inputTo" })
        </div>
    </div>
    <div class="form-group row">
        <label for="formControlRange">Rating</label>
        <input type="range"
               class="form-control-range"
               name="teacherRating"
               id="formControlRange"
               min="0" max="10"
               step="1"
               value="0">
    </div>
    <button type="submit" class="btn btn-outline-primary">Rate</button>
</form>