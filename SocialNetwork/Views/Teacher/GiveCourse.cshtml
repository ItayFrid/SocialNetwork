@model SocialNetwork.ViewModels.ViewModel

@{
    /**/

    ViewBag.Title = "Give Course";
}

<h2>Give Course</h2>
<hr />

@using (Html.BeginForm("ChangeCourseTeacher", "Teacher", FormMethod.Post))
{
    <div class="form-group row">
        <label for="inputTo" class="col-sm-2 col-form-label">Teacher</label>
        <div class="col-sm-10">
            @Html.DropDownListFor(m => m.teacher.email, new SelectList(Model.teachers, "email", "name"), new { @class = "form-control", name = "inputTeacher" })
        </div>
    </div>

    <div class="form-group row">
        <label for="inputTo" class="col-sm-2 col-form-label">Course</label>
        <div class="col-sm-10">
            @Html.DropDownListFor(m => m.course.id, new SelectList(Model.courses, "id", "name"), new { @class = "form-control", name = "inputCourse" })
        </div>
    </div>

    <input class="btn btn-outline-primary" id="submit" type="submit" value="Give Course" />
}
