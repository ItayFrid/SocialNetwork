
@{
    ViewBag.Title = "ReferenceNewStudent";
}

<h2>Reference New Student</h2>

<hr />
@using (Html.BeginForm("SendReference", "Student", FormMethod.Post))
{
    <div class="form-group row">
        <label for="inputTarget" class="col-sm-2 col-form-label">Friend Email</label>
        <div class="col-sm-10">
            <input type="email" class="form-control" name="email" />
        </div>
    </div>
    <div class="form-group row">
        <label for="inputTarget" class="col-sm-2 col-form-label">Message</label>
        <div class="col-sm-10">
            <textarea class="form-control" name="message" rows="2" cols="20"></textarea>
        </div>
    </div>
    <input id="sender" name="sender" type="hidden" value="@User.Identity.Name" />
    <input class="btn btn-outline-primary" id="submit" type="submit" value="Send Invitation" />
}