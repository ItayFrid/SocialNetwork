@model SocialNetwork.Models.Complaint

@{
    ViewBag.Title = "Complaint";
}

<h2>Complaint</h2>
<hr />
@using (Html.BeginForm("NewComplaint", "Student", FormMethod.Post))
{
    <div class="form-group row">
        <label for="inputName" class="col-sm-2 col-form-label">Name</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.Sender, new { @class = "form-control", id = "inputSender", type = "name", @readonly = true , @value=User.Identity.Name })
            <small class="text-danger">@Html.ValidationMessageFor(x => x.Sender)</small>
        </div>
    </div>
    <div class="form-group row">
        <label for="inputBody" class="col-sm-2 col-form-label">Body</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.body, new { @class = "form-control", id = "inputBody" })
            <small class="text-danger">@Html.ValidationMessageFor(x => x.body)</small>
        </div>
    </div>
    <input class="btn btn-outline-primary" id="submit" type="submit" value="Add Course" />
    <h4 class="text-danger">@ViewBag.message</h4>
}